  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./src/services": {
        "lines": 100
      }
    }
  },
  "scripts": {
    "start": "cross-env NODE_ENV=prod node src/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --runInBand --forceExit",
